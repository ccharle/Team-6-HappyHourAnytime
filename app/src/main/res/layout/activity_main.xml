<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/search_by_name_button"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="Know The Name Of The Drink?"
        android:textSize="32sp"
        android:background="#F7676D"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/search_by_ingredients_button"/>

    <Button
        android:id="@+id/search_by_ingredients_button"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="Know The Drink Ingredient?"
        android:textSize="32sp"
        android:background="#F5907C"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_by_name_button"
        app:layout_constraintBottom_toTopOf="@id/pick_random_drink_button"/>

    <Button
        android:id="@+id/pick_random_drink_button"
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:text="I Can't Decide. Pick For Me"
        android:textSize="32sp"
        android:background="@color/backgroundColor"
        app:layout_constraintTop_toBottomOf="@id/search_by_ingredients_button"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>