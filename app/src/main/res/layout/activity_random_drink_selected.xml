<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".RandomDrinkSelected">

    <TextView
        android:id="@+id/name_of_random_drink_textview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#F5907C"
        android:gravity="center"
        android:text="Drink Name"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/random_drink_imageview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/random_drink_imageview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#F5907C"
        app:layout_constraintBottom_toTopOf="@id/random_drink_ingredients_textview"
        app:layout_constraintTop_toBottomOf="@id/name_of_random_drink_textview"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/random_drink_ingredients_textview"
        android:layout_width="match_parent"
        android:layout_height="365dp"
        android:text="all the ingredients, bruh"
        android:gravity="center"
        android:background="#F5907C"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/random_drink_imageview" />

</android.support.constraint.ConstraintLayout>